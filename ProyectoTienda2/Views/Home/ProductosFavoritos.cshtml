@model DatosArtista

@{
    var url = "https://storageaccountcarlosm.blob.core.windows.net/proyectotienda/";
}

<div style="margin: 0 auto; text-align: center">
    <div class="p-4 sm:ml-64">
        <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
            <div class="text-center p-4">
                <h1 class="text-3xl font-sans md:font-serif" style="margin-bottom: 20px;">FAVORITOS</h1>

                @if (Context.Session.GetObject<List<int>>("FAVORITOS") == null && Model == null)
                {
                    <h1 style="color:red" class="display-4">
                        Todavia no has agregado favoritos
                    </h1>
                }
                else
                {
                    @foreach (InfoProducto item in Model.listaProductos)
                    {
                        <div class="relative p-4 border-2 border-gray-900 rounded-lg dark:border-gray-700" style="margin-bottom: 20px;">

                            <a asp-controller="Artista" asp-action="DetallesArtista" asp-route-idartista="@item.IdArtista">
                                <h1 class="absolute top-0 left-0 px-4 py-2 bg-white text-gray-900 dark:text-white dark:bg-gray-900 dark:border-gray-700 rounded-lg shadow">@item.Nick</h1>
                            </a>

                            <a asp-controller="Home" asp-action="ProductosFavoritos" asp-route-ideliminar="@item.IdInfoArte">
                                <svg style="margin: 0 auto;" aria-hidden="true" class="absolute top-0 right-0 w-10 h-10 text-gray-900 transition duration-75 dark:text-gray-400 dark:group-hover:text-white hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <path clip-rule="evenodd" fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z"></path>
                                </svg>
                            </a>

                            <a asp-controller="Home" asp-action="Details" asp-route-idproducto="@item.IdInfoArte" style="margin-top: 35px" class="flex h-48 mb-4 rounded bg-white border border-gray-200 rounded-lg shadow md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                                <img class="object-cover w-full max-h-full flex-shrink-0 rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="@ViewData["BUCKETURL"]@item.Imagen" alt="">

                                <div class="flex flex-col justify-between p-4 leading-normal" style="margin: 0 auto;">
                                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@item.Titulo</h5>
                                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><pre>@item.Descripcion</pre></p>
                                    <p class="font-medium text-2xl text-gray-900 dark:text-gray-400">Precio: @item.Precio €</p>
                                </div>
                            </a>

                        </div>
                    }
                }
                
            </div>
        </div>
    </div>
</div>

