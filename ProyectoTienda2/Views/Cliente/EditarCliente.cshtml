@model DatosArtista

<div class="h-full" style="display: flex; align-items: center; justify-content: center; height: 100vh;">
    
    <div class="border-b-2 block md:flex" style="width: 50%;">

        <div class="w-full md:w-2/5 p-4 sm:p-6 lg:p-8 bg-white shadow-md">
            <div class="flex justify-between">
                <span class="text-xl font-semibold block">Perfil Cliente</span>
                <a asp-controller="Cliente" asp-action="DetallesCliente" asp-route-idcliente="@Model.cliente.IdCliente"
                   class="-mt-2 text-md font-bold text-red-600 rounded-full px-5 py-2 inline-flex hover:text-white border border-red-600 hover:bg-red-600">
                    Volver
                </a>
            </div>

            <span class="text-gray-600">Aquí está tú información</span>
            <div class="w-full p-8 mx-2 flex justify-center">
                <img id="showImage" class="max-w-xs w-32 items-center border" src="@ViewData["PERFIL"]" alt="">
            </div>
        </div>
        <form method="post" enctype="multipart/form-data" class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">
            <div class="rounded  shadow p-6">
                <div class="pb-6">
                    <label class="font-semibold text-gray-700 block pb-1">Nombre</label>
                    <div class="flex">
                        <input name="nombre" class="border-1  rounded-r px-4 py-2 w-full" type="text" value="@Model.cliente.Nombre" />
                    </div>
                </div>
                <div class="pb-4">
                    <label class="font-semibold text-gray-700 block pb-1">Apellidos</label>
                    <input name="apellidos" class="border-1  rounded-r px-4 py-2 w-full" type="text" value="@Model.cliente.Apellidos" />
                </div>
                <div class="pb-4">
                    <label class="font-semibold text-gray-700 block pb-1">Email</label>
                    <input name="email" class="border-1  rounded-r px-4 py-2 w-full" type="email" value="@Model.cliente.Email" />
                </div>
                <div class="pb-4">
                    <label class="font-semibold text-gray-700 block pb-1">Imagen</label>
                    <input name="file" class="border-1  rounded-r px-4 py-2 w-full" type="file" value="@Model.cliente.Imagen" />
                </div>
                <button style="margin: 0 auto; text-align: center;"
                   class="-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800">
                    Editar
                </button>
            </div>
        </form>
    </div>

</div>
